                                    .body3.pb-12 Name
                                    input(type="text" placeholder="Alexander").bg-white.bora-8.p-16.w-100
                                .col-12.col-sm-6
                                    .body3.pb-12 Email
                                    input(type="text" placeholder="avitex@mail.com").bg-white.bora-8.p-16.w-100
